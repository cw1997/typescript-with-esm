{
  "name": "@cw1997/test-app",
  "private": true,
  "description": "test for apps",
  "homepage": "https://www.mubiao.org",
  "author": {
    "name": "Chang Wei",
    "email": "changwei1006@gmail.com",
    "url": "https://www.changwei.me/"
  },
  "type": "module",
  "module": "./dist/esm/index.js",
  "exports": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "start": "node ./dist/esm/index.js",
    "dev:tsx": "tsx watch --enable-source-maps ./src/main.ts",
    "dev:webpack": "webpack --watch --mode development",
    "dev:rollup": "rollup -c -w --bundleConfigAsCjs",
    "build:webpack": "webpack --progress --mode production",
    "build:rollup": "rollup -c --sourcemap --bundleConfigAsCjs",
    "upgrade": "pnpx npm-check-updates -i"
  },
  "dependencies": {
    "@cw1997/test-lib": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "4.28.1",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "webpack": "5.97.1",
    "webpack-cli": "5.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/**.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
